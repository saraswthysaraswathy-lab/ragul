Create the order table
CREATE TABLE orders (
order_id INT AUTO_INCREMENT PRIMARY KEY,

customer_name VARCHAR(100),
product_name VARCHAR(100),
order_date DATETIME,
quantity INT,
price DECIMAL(10,2),
status VARCHAR(20),
shipping_address TEXT
);

Insert the data
